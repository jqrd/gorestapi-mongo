{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch local server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}/src",
      "program": "${workspaceFolder}/src/main.go",
      "env": {
        "Mongo.Host": "localhost",
        "Mongo.Port": "${input:MONGO_PORT}",
        "Mongo.Username": "${input:MONGO_USR}",
        "Mongo.Password": "${input:MONGO_PWD}",
      },
      "args": [
        "api"
      ],
      "buildFlags": "-ldflags '-X ${input:PACKAGENAME}/conf.Executable=${input:EXECUTABLE} -X ${input:PACKAGENAME}/conf.GitVersion=dev'",
      "showLog": true,
      "logOutput": "rpc",
      "trace": "verbose"
    }
  ],
  "inputs": [
    {
      "id": "PACKAGENAME",
      "type": "command",
      "command": "extension.commandvariable.transform",
      "args": {
        "text": "${command:gomod}",
        "find": "^module ([^\n]*)\n.*$",
        "replace": "$1",
        "flags": "s",
        "command": {
          "gomod": {
            "command": "extension.commandvariable.file.content",
            "args": {
              "fileName": "${workspaceFolder:src}/go.mod",
            }
          }
        }
      }
    },
    {
      "id": "EXECUTABLE",
      "type": "command",
      "command": "extension.commandvariable.transform",
      "args": {
        "text": "${command:Makefile}",
        "find": "^EXECUTABLE := ([^\n]*)\n.*$",
        "replace": "$1",
        "flags": "s",
        "command": {
          "Makefile": {
            "command": "extension.commandvariable.file.content",
            "args": {
              "fileName": "${workspaceFolder:src}/../Makefile2",
            }
          }
        }
      }
    },
    {
      "id": "MONGO_PORT",
      "type": "command",
      "command": "extension.commandvariable.file.content",
      "args": {
        "fileName": "${workspaceFolder:src}/../infra/dev/.env",
        "key": "MONGO_PORT",
        "default": "UNKNOWN_PORT"
      }
    },
    {
      "id": "MONGO_USR",
      "type": "command",
      "command": "extension.commandvariable.file.content",
      "args": {
        "fileName": "${workspaceFolder:src}/../infra/dev/.env",
        "key": "MONGO_USR",
        "default": "UNKNOWN_USR"
      }
    },
    {
      "id": "MONGO_PWD",
      "type": "command",
      "command": "extension.commandvariable.file.content",
      "args": {
        "fileName": "${workspaceFolder:src}/../infra/dev/.env",
        "key": "MONGO_PWD",
        "default": "UNKNOWN_PWD"
      }
    },
    {
      "id": "MONGO_U",
      "type": "command",
      "command": "extension.commandvariable.transform",
      "args": {
        "text": "${command:docker-compose.yml}",
        "find": "^.*MONGO_INITDB_ROOT_USERNAME:\\s*([^\\s\n]*)\n.*$",
        "replace": "$1",
        "flags": "s",
        "command": {
          "docker-compose.yml": {
            "command": "extension.commandvariable.file.content",
            "args": {
              "fileName": "${workspaceFolder:src}/../infra/dev/docker-compose.yml",
            }
          }
        }
      }
    },
    {
      "id": "MONGO_P",
      "type": "command",
      "command": "extension.commandvariable.transform",
      "args": {
        "text": "${command:docker-compose.yml}",
        "find": "^.*MONGO_INITDB_ROOT_PASSWORD:\\s*([^\\s\n]*)\n.*$",
        "replace": "$1",
        "flags": "s",
        "command": {
          "docker-compose.yml": {
            "command": "extension.commandvariable.file.content",
            "args": {
              "fileName": "${workspaceFolder:src}/../infra/dev/docker-compose.yml",
            }
          }
        }
      }
    }
  ]
}